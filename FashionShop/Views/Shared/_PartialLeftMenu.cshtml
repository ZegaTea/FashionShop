@model Model.ViewModel.CategoryViewModel


<div class="left-sidebar">
    <h2>Category</h2>
    <div class="panel-group category-products" id="accordian">
        <!--category-productsr-->
        @foreach (var item in Model.ListGroup)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@item.maNhom">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @item.tenNhom
                        </a>
                    </h4>
                </div>
                <div id="@item.maNhom" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var subItem in Model.ListGroupDetail)
                            {
                                if (subItem.nhomMa == item.maNhom)
                                {
                                    <li><a href="/san-pham/@subItem.meta_tittle">@subItem.tenLoaiSanPham</a></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
