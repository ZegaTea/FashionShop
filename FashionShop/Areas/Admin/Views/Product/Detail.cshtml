@model Model.Entities.Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.urlAnh" />
        </div>
        <div class="col-md-6">
            <div class="col-md-4">
                <p>Mã sản phẩm: </p>
                <p>Tên sản phẩm: </p>
                <p>Giá sản phẩm: </p>
                <p>Chất liệu: </p>
                <p>Màu sắc: </p>
                <p>Số lượng đặt mua: </p>
                <p>Ngày tạo: </p>
            </div>
            <div class="col-md-8">
                <input type="text" value="@Model.maSanPham"/><br/>
                <input type="text" value="@Model.tenSanPham" /><br/>
                <input type="number" value="@Model.giaSanPham.ToString("N0")" /><br/>
                <input type="text" value="@Model.chatLieu" /><br/>
                <input type="text" value="@Model.mauSac" /><br/>
                <input type="number" value="@Model.soLuongDatMua" /><br />
                <input type="date" value="@Model.ngayTao" readonly /><br />
            </div>
        </div>
    </div>
</div>

