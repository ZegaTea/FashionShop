@model IEnumerable<FashionShop.Areas.Admin.Models.DTO.adminProductViewDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section cssHeader{
    <link href="~/assets/admin/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/assets/admin/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet" />
}

@section jsFooter{
    <script src="~/assets/admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="~/assets/admin/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script src="~/assets/admin/js/deleteAdmin.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh sách sản phẩm
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên</th>
                                <th>Giá</th>
                                <th>Đặt mua</th>
                                <th>Màu sắc</th>
                                <th>Ảnh</th>
                                <th>Chất liệu</th>
                                <th>Loại sản phẩm</th>
                                <th>Nhóm sản phẩm</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.maSanPham</td>
                                    <td>@item.tenSanPham</td>
                                    <td>@item.giaSanPham.ToString("N0")</td>
                                    <td>@item.soLuongDatMua</td>
                                    <td>@item.mauSac</td>
                                    <td><img src="@item.urlAnh" style="width:50px;height:50px" /></td>
                                    <td>@item.chatLieu</td>
                                    <td>@item.tenLoai</td>
                                    <td>@item.tenNhom</td>
                                    <td>@Html.ActionLink("Sửa", "Detail", new { id = item.maSanPham })</td>
                                    <td><a href="#" class="btn-delete" data-id="@item.maSanPham">Xóa</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



