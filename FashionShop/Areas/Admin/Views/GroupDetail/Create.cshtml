@model List<Model.Entities.GroupPr>
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section jsFooter{
    <script src="~/assets/admin/js/createAdmin.js"></script>
}

<div id="page-wrapper">
    <div class="col-md-12">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-3" for="ma">Mã loại sản phẩm: </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="ma">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="ten">Tên loại sản phẩm: </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="ten">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="tittle">Meta Tittle: </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="tittle">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="manhom">Nhóm sản phẩm: </label>
                <div class="col-sm-9">
                    <select class="form-control tenloai" id="manhom">
                        @foreach (var item in Model)
                        {
                            <option value="@item.maNhom">@item.tenNhom</option>
                        }
                    </select>
                </div>
            </div>
            <button type="button" class="btn btn-default" id="btnCreateGroupDetail">Thêm Loại sản phẩm</button>
        </div>
    </div>
</div>

